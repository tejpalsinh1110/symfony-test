{% extends 'base.html.twig' %}

{% block title %}{{ product.title }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                {% if product.imagePath %}
                    <div class="card">
                        <img src="{{ asset('media/products/' ~ product.imagePath) }}" alt="{{ product.title }}" class="card-img-top img-fluid rounded">
                    </div>
                {% else %}
                    <div class="bg-light p-5 rounded text-center">
                        <p class="text-muted">No image available</p>
                    </div>
                {% endif %}
            </div>
            <div class="col-md-6">
                <div class="card p-4">
                    <h1 class="mb-4">{{ product.title }}</h1>
                    <p class="lead">${{ product.priceExclVat|number_format(2, '.', ',') }}</p>
                    <p><strong>Category:</strong> {{ product.category.value }}</p>
                    <div class="mt-4">
                        <h4>Description</h4>
                        <p>{{ product.description }}</p>
                    </div>
                    <div class="mt-4">
                        <a href="{{ path('app_product_index') }}" class="btn btn-outline-secondary">Back to list</a>
                        <form action="{{ path('app_product_delete', {id: product.id}) }}" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this product?');">
                            <button type="submit" class="btn btn-outline-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 